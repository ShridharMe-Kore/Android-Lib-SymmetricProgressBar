<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="vertical"
    style="?android:attr/actionBarStyle">
    <TextView
        android:id="@+id/fake_action_bar_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/fake_action_bar_text_view_size" />
    <android.lib.symmetricprogressbar.SymmetricProgressBar
        android:id="@+id/fake_action_bar_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_action_bar_progress_bar_height"
        android:layout_weight="0" />
</LinearLayout>